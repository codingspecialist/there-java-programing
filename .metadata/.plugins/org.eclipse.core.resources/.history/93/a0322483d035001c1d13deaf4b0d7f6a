package ch03;

public class CoinExample {

	public static void main(String[] args) {
		// 최소 동전구하기 500, 100, 50, 10
		int money = 3680;
		int restMoney = 0;
		
		System.out.println("500원 : "+(money/500)); // 180원 남음
		restMoney = money%500;
		System.out.println("남은금액 : "+restMoney);
		System.out.println("100원 : "+(180/100));
	}

}
